# Orbitr Environment Configuration v3.0
# Copy this file to .env and fill in your values

# ============================================
# LLM Configuration (Required)
# ============================================

# PRIMARY: Z.AI GLM API Key (Required for AI analysis)
# Get your key from: https://z.ai/manage-apikey/apikey-list
GLM_API_KEY=your-glm-api-key-here

# ============================================
# Context Management (Optional)
# ============================================

# UltraContext API Key - Versioned context storage
# Get your key from: https://ultracontext.ai/
ULTRACONTEXT_API_KEY=uc_live_your_key_here

# ============================================
# Observability (Optional but Recommended)
# ============================================

# LangSmith Tracing - Debug agent decisions
# Get your key from: https://smith.langchain.com/
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=ls__your_key_here
LANGCHAIN_PROJECT=orbitr-production

# Local Tracing (fallback when LangSmith not configured)
ENABLE_LOCAL_TRACING=true

# ============================================
# Database Configuration
# ============================================

# SQLite (default - good for development)
DATABASE_URL=sqlite:///./orbitr.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/orbitr

# ============================================
# Application Settings
# ============================================

# Logging Level
LOG_LEVEL=INFO

# Feature Flags
ENABLE_GUARDRAILS=true
STRICT_MODE=true
