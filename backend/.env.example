# Orbitr Environment Configuration
# Copy this file to .env and fill in your values

# PRIMARY: Z.AI GLM API Key (Required)
# Get your key from: https://z.ai/manage-apikey/apikey-list
GLM_API_KEY=your-api-key-here

# Database (Optional - defaults to SQLite)
DATABASE_URL=sqlite:///./orbitr.db

# For production, use PostgreSQL:
# DATABASE_URL=postgresql://user:pass@localhost:5432/orbitr

# Logging Level (Optional)
LOG_LEVEL=INFO
